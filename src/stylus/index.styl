.panel
    control-panel-w = 20em
    nav-panel-h = 4em
    position absolute
    &.main
        top nav-panel-h
        left control-panel-w
        bottom 0
        right 0
        z-index 0
        .map
            position absolute
            top 0
            left 0
            bottom 0
            right 0
    &.controls
        top nav-panel-h
        left 0
        bottom 0
        width control-panel-w
        box-shadow 0 0 1em 0 #000
        background-color #FFF
        z-index 10
    &.nav
        top 0
        left 0
        right 0
        height nav-panel-h
        box-shadow 0 0 1em 0 #000
        background-color #FFF
        z-index 100
        font-family sans-serif
        text-align center
        line-height 1em
        
.loading-overlay
    position absolute
    top 0
    left 0
    bottom 0
    right 0
    background rgba(255, 255, 255, 0.7)
    transition opacity 0.3s ease
    display none
    transform translateZ(0px)
    z-index 1

.spinner
    animation-duration 1s
    animation-name spin
    animation-iteration-count infinite
    animation-timing-function linear
    position absolute
    top 50%
    left 50%
    right 50%
    height 0
    text-align center
    .fa
        color rgba(0, 0, 0, 1)
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        font-size 10em
        display inline-block
        
.map-container
    position absolute
    top 0
    left 0
    bottom 0
    right 0
    
.map-overlay
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    transform translateZ(0px)
    z-index 1

@keyframes spin
    from
        transform rotate(0deg)
    to
        transform rotate(360deg)
